{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "strict": false,
    "paths": {
      "@kore.services/*": [
        "./src/app/services/*"
      ],
      "@kore.environment": [
        "./src/environments/environment"
      ],
      "@kore.modules": [
        "./src/app/modules/*"
      ],
      "@kore.components": [
        "./src/app/components/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/types/*"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  }
}
